<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="160dp"
    android:layout_height="182dp"
    android:background="@drawable/block_r16"
    android:paddingStart="9dp"
    android:paddingTop="9dp"
    android:layout_marginEnd="15dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/favoriteImage"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:padding="6dp"
        android:src="@drawable/favorite"
        android:background="@drawable/background_cicrle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageGoods"
        android:layout_marginEnd="9dp"
        android:layout_width="match_parent"
        tools:background="@drawable/nike_zoom_winflo_3_831561_001_mens_running_shoes_11550187236tiyyje6l87_prev_ui_2"
        android:layout_height="70dp"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bestSeller"
        style="@style/newPeninimFw400Fs12Lh16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/best_seller"
        android:layout_marginTop="12dp"
        android:textAllCaps="true"
        android:textColor="@color/accent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageGoods" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_marginEnd="9dp"
        style="@style/newPeninimFw400Fs16Lh20"
        android:textColor="@color/hint"
        android:layout_width="match_parent"
        tools:text="Nike Air Max"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/bestSeller" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/price"
        style="@style/newPeninimFw400Fs14Lh16"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_752_00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/buttonCart"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@drawable/accent_topleft_r16"
        android:src="@drawable/icon_plus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>