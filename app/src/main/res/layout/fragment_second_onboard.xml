<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:background="@drawable/gradient"
    tools:context=".presentation.fragments.onboard.SecondOnboardFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/let_s_start_journey"
        android:textAlignment="center"
        style="@style/newPeninimFw400Fs34Lh44dot2"
        android:textColor="@color/block"
        android:layout_marginHorizontal="30dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/smart_gorgeous_fashionable_collection_explor_now"
        android:textAlignment="center"
        android:layout_marginHorizontal="30dp"
        style="@style/newPeninimFw400Fs16Lh24"
        android:textColor="@color/subTextLight"
        android:layout_marginTop="12dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/indicator_2"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"/>

</androidx.appcompat.widget.LinearLayoutCompat>